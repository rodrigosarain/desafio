<div class="d-flex justify-content-center align-items-center">
  <h1 class="text-center">Productos</h1>
  <a href="/carts/:{{cid}}" class="ms-5">
  <i class="bi bi-cart cart-icon"></i>
</a>


</div>
<div class="container">
  <div class="row">
    {{#each products}}
      <div class="card col-xl-4 col-md-6 col-sm-12">
        <img src="{{img}}" alt="product" class="card-img-top" />
        <div class="card-body">
          <h2 class="card-title">{{title}}</h2>
          <p class="card-text">{{description}}</p>
          <p class="card-text">Price: ${{price}}</p>
          <form action="/api/carts/{{../session.cart}}/product/{{id}}" method="POST">
            <button class="btnMios" type="submit">Agregar al Carrito</button>
          </form>
        </div>
      </div>
    {{/each}}
  </div>
</div>

